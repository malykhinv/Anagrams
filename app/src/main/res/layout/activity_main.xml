<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_horizontal_big"
        android:layout_marginTop="@dimen/margin_vertical_regular"
        android:text="@string/app_name"
        android:textColor="@color/purple_500"
        android:textSize="@dimen/text_header_first"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutDescription"
        android:layout_width="@dimen/none"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_horizontal_regular"
        android:layout_marginTop="@dimen/margin_vertical_regular"
        android:layout_marginEnd="@dimen/margin_horizontal_regular"
        android:background="@drawable/description_background"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle">

        <LinearLayout
            android:id="@+id/layoutHowToUse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textHowToUse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_regular"
                android:layout_marginTop="@dimen/margin_vertical_regular"
                android:layout_marginEnd="@dimen/margin_horizontal_regular"
                android:layout_weight="1"
                android:text="@string/how_to_use"
                android:textAlignment="textStart"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_header_second"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageExpandCollapse"
                android:layout_width="@dimen/width_small"
                android:layout_height="@dimen/height_small"
                android:layout_marginTop="@dimen/margin_vertical_small"
                android:layout_marginEnd="@dimen/margin_horizontal_small"
                android:layout_marginBottom="@dimen/margin_vertical_small"
                android:clickable="true"
                android:contentDescription="@string/image_description_expand_collapse"
                android:focusable="true"
                app:srcCompat="@drawable/image_expand"
                app:tint="@color/black" />

        </LinearLayout>

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_horizontal_regular"
            android:layout_marginTop="@dimen/margin_vertical_small"
            android:layout_marginEnd="@dimen/margin_horizontal_regular"
            android:text="@string/app_description"
            android:textColor="@color/black"
            android:textSize="@dimen/text_regular" />

        <TextView
            android:id="@+id/textIgnoredCharacters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_horizontal_regular"
            android:layout_marginTop="@dimen/margin_vertical_regular"
            android:layout_marginEnd="@dimen/margin_horizontal_regular"
            android:layout_marginBottom="@dimen/margin_vertical_regular"
            android:background="@drawable/ignored_characters_background"
            android:gravity="center"
            android:minHeight="36dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_regular" />

        <LinearLayout
            android:id="@+id/layoutAddIgnoredCharacter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_horizontal_regular"
            android:layout_marginEnd="@dimen/margin_horizontal_regular"
            android:layout_marginBottom="@dimen/margin_vertical_regular"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutAddCharacter"
                android:layout_width="@dimen/width_big"
                android:layout_height="@dimen/height_big"
                android:hint="@string/symbol"
                android:textColorHint="@color/blue_grey_200">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextAddCharacter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/blue_grey_50"
                    android:inputType="textCapCharacters"
                    android:maxLength="100"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_regular" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/buttonAddCharacter"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_regular"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_horizontal_regular"
                android:text="@string/add_character" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textResult"
        android:layout_width="@dimen/none"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_horizontal_regular"
        android:layout_marginEnd="@dimen/margin_horizontal_regular"
        android:layout_marginBottom="@dimen/margin_vertical_regular"
        android:text="@string/advice"
        android:textAlignment="textStart"
        android:textColor="@color/teal_700"
        android:textSize="@dimen/text_regular"
        app:layout_constraintBottom_toTopOf="@+id/layoutTextToReverse"
        app:layout_constraintEnd_toEndOf="@+id/layoutTextToReverse"
        app:layout_constraintStart_toStartOf="@+id/layoutTextToReverse" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutTextToReverse"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_big"
        android:layout_marginStart="@dimen/margin_horizontal_regular"
        android:layout_marginEnd="@dimen/margin_horizontal_regular"
        android:layout_marginBottom="@dimen/margin_vertical_regular"
        android:clickable="false"
        android:hint="@string/input_your_text_here"
        android:nestedScrollingEnabled="true"
        android:scrollbars="vertical"
        android:textColorHint="@color/blue_grey_200"
        android:verticalScrollbarPosition="right"
        app:layout_constraintBottom_toTopOf="@+id/buttonReverseWords"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextToReverse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue_grey_50"
            android:clickable="false"
            android:maxLength="80"
            android:textColor="@color/black"
            android:textSize="@dimen/text_regular" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttonReverseWords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vertical_regular"
        android:text="@string/reverse_words"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/layoutTextToReverse"
        app:layout_constraintStart_toStartOf="@+id/layoutTextToReverse" />

</androidx.constraintlayout.widget.ConstraintLayout>